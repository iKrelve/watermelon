{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/mainview/*"],
      "@shared/*": ["src/shared/*"]
    },
    "types": ["vite/client"]
  },
  "include": [
    "src/mainview/**/*",
    "src/shared/**/*",
    "vite.config.ts",
    "vitest.config.ts"
  ],
  "exclude": ["node_modules", "out", "dist", "src-tauri"]
}
